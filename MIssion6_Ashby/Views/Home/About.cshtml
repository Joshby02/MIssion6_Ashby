@{
    ViewData["Title"] = "Get to Know Joel";
}

<div class="container">
    <h1 class="display-4 mb-4">Get to Know Joel</h1>

    <div class="row">
        <div class="col-md-8">
            <p class="lead">
                Joel Hilton is passionate about film and pop culture. He minored in Film Studies at BYU,
                contracts as a movie reviewer for ClearPlay, and hosts a weekly podcast about films and pop culture.
            </p>

            <h3 class="mt-4">Where to Find Joel</h3>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Quick Wits Comedy</h5>
                    <p class="card-text">Joel performs regularly at Quick Wits Comedy.</p>
                    <a href="https://www.qwcomedy.com/" target="_blank" class="btn btn-primary">
                        Visit Quick Wits Comedy
                    </a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Baconsale Podcast</h5>
                    <p class="card-text">Listen to Joel's weekly podcast about films and pop culture.</p>
                    <a href="https://baconsale.com/" target="_blank" class="btn btn-primary">
                        Visit Baconsale
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <a href="https://baconsale.com/" target="_blank">
                <img src="https://byu.box.com/shared/static/ie6ibeddqm0f6oudp7bc5dyt87zxi2u4.jpg"
                     alt="Baconsale Podcast"
                     class="img-fluid rounded shadow" />
            </a>
            <p class="text-center mt-2"><small>Click image to visit Baconsale</small></p>
        </div>
    </div>
</div>