@model Mission6_Ashby.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete Movie</h1>

<h3 class="text-danger">Are you sure you want to delete this movie?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>
        
        <dt class="col-sm-3">Year</dt>
        <dd class="col-sm-9">@Model.Year</dd>
        
        <dt class="col-sm-3">Director</dt>
        <dd class="col-sm-9">@(Model.Director ?? "N/A")</dd>
        
        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">@Model.Rating</dd>
        
        <dt class="col-sm-3">Edited</dt>
        <dd class="col-sm-9">@(Model.Edited ? "Yes" : "No")</dd>
        
        <dt class="col-sm-3">Copied to Plex</dt>
        <dd class="col-sm-9">@(Model.CopiedToPlex ? "Yes" : "No")</dd>
        
        <dt class="col-sm-3">Lent To</dt>
        <dd class="col-sm-9">@(Model.LentTo ?? "N/A")</dd>
        
        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@(Model.Notes ?? "N/A")</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MovieId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
